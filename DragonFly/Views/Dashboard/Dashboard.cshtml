@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .row {
        display: flex;
        flex-wrap: wrap;
        margin-right: -7.5px;
        margin-left: -7.5px;
    }
    /*custom dashboard card*/

    .overview-item--c1 {
        background-image: -webkit-linear-gradient(90deg, #3f5efb 0%, #1f6b3d 100%);
    }

    .overview-item--c2 {
        background-image: -webkit-linear-gradient(90deg, #11998e 0%, #38ef7d 100%);
    }

    .overview-item--c3 {
        background-image: -webkit-linear-gradient(90deg, #ee0979 0%, #ff6a00 100%);
    }

    .overview-item--c4 {
        background-image: -webkit-linear-gradient(90deg, #45b649 0%, #007070 100%);
    }

    .overview-item--c5 {
        background-image: -webkit-linear-gradient(90deg, #45b649 0%, #472e8f 100%);
    }

    .overview-item--c6 {
        background-image: -webkit-linear-gradient(90deg, #45b649 0%, #8c4545 100%);
    }

    .overview-item--c7 {
        background-image: -webkit-linear-gradient(90deg, #45b649 0%, #4080a6 100%);
    }

    .overview-item--c8 {
        background-image: -webkit-linear-gradient(90deg, #3f5efb 0%, #fc466b 100%);
    }

    .overview-item {
        border-radius: 10px;
        padding: 30px;
        padding-bottom: 0;
        box-shadow: 0px 2px 5px 0px rgba(0, 0, 0, 0.1);
        margin-bottom: 40px;
    }

    .overview-box .icon {
        display: inline-block;
        vertical-align: top;
        margin-right: 15px;
    }

        .overview-box .icon i {
            font-size: 60px;
            color: #fff;
        }

    .zmdi {
        display: inline-block;
        font: normal normal normal 14px/1 'Material-Design-Iconic-Font';
        text-rendering: auto;
        -webkit-font-smoothing: antialiased;
    }

    .overview-box .text {
        font-weight: 300;
        display: inline-block;
    }

    .overview-chart {
        height: 115px;
        position: relative;
    }

    .overview-box .text span {
        font-size: 24px;
        color: rgba(255, 255, 255, 0.6);
    }

    .overview-box .text h2 {
        font-weight: 300;
        color: #fff;
        font-size: 36px;
        line-height: 1;
        margin-bottom: 5px;
    }
</style>

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Dashboard</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/dashboard/dashboard">Home</a></li>
                    <li class="breadcrumb-item active">Dashboard</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<section class="content">
    <div class="container-fluid">

        <div class="row">

            <div class="col-lg-3 col-12">
                <a href="/member/memberdetails">
                    <div class="overview-item overview-item--c2">
                        <div class="overview__inner">
                            <div class="overview-box clearfix">
                                <div class="icon">
                                    <i class="fa fa-users"></i>
                                </div>
                                <div class="text">
                                    <h2 id="totalUnion">0</h2>
                                    <span>Member Information</span>
                                </div>
                            </div>
                            <div class="overview-chart">
                                <canvas id="widgetChart2"></canvas>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-lg-3 col-12">
                <a href="/userregistration/create">
